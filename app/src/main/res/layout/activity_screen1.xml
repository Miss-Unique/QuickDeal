<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_screen1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.soumyaagarwal.quickdeal.Screen1"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="14dp"
        android:id="@+id/r1"
        android:background="@color/colorPrimary"
        android:padding="20dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/label"
            app:errorTextAppearance="@style/error"
            android:layout_margin="5dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:textCursorDrawable="@null"
                android:id="@+id/edittext_title"
                android:textColorHint="@color/white"
                android:backgroundTint="#000000"/>

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="12dp"
        android:elevation="6dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/label2"
            app:errorTextAppearance="@style/error2"
            android:layout_margin="5dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:textCursorDrawable="@null"
                android:id="@+id/edittext_desp"
                android:textColorHint="@color/white"
                android:backgroundTint="#000000"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attached File"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />
    </LinearLayout>
</LinearLayout>
